{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_user_index' %}

{% block main %}
    <h1>{{ 'user.list.title'|trans }}</h1>

    <table class="table table-striped table-middle-aligned table-borderless">
        <thead>
        <tr>
            <th scope="col">{{ 'user.list.username'|trans }}</th>
            <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> {{ 'user.list.fullname'|trans }}</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'user.list.email'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}
                    {% if user == app.user %} <span class="badge badge-success">{{ 'current_user'|trans|upper }}</span>{% endif %}
                </td>
                <td>{{ user.fullName }}</td>
                <td>{{ user.email }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}


{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_user_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_user'|trans }}
        </a>
    </div>

    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}